{
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        }
    },
    "require": {
        "php": "^7.1.3",
        "spatie/image-optimizer": "~1.1.4",
        "symfony/console": "^4.2",
        "symfony/dotenv": "^4.2",
        "symfony/expression-language": "^4.2",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "^4.2",
        "symfony/twig-bundle": "^4.2",
        "symfony/validator": "^4.2",
        "symfony/yaml": "^4.2",
        "symfony/web-server-bundle": "^4.2",
        "symfony/translation": "^4.2"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "scripts": {
        "fix": "php-cs-fixer fix --config php-cs-config.php ./src",
        "server:run": "console/console server:run"
    },
    "require-dev": {
        "symfony/debug-pack": "^1.0",
        "neronmoon/scriptsdev": "^0.1.3",
        "brainmaestro/composer-git-hooks": "^2.5",
        "friendsofphp/php-cs-fixer": "^2.13"
    }
}
